<%- include('partials/header') %>

    <h2>Edit Post</h2>
    <form method="POST">
        <div class="form-group">
            <label for="title">Title</label>
            <input 
                type="text" 
                id="title" 
                name="title" 
                class="form-control" 
                value="<%= post.title %>" 
                required>
        </div>
        <div class="form-group">
            <label for="content">Content</label>
            <textarea 
                id="content" 
                name="content" 
                class="form-control" 
                rows="10" 
                required><%= locals.md %></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Update Post</button>
        <a href="/posts/<%= locals.id %>" class="btn btn-secondary">Cancel</a>
    </form>

<%- include('partials/footer') %>